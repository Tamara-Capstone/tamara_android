<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailScanAcitivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:contentDescription="imgPlant"
        android:scaleType="center"
        android:src="@drawable/img_plant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:layout_width="292dp"
        android:layout_height="28dp"
        android:paddingLeft="24dp"
        android:text="@string/nama_tanaman"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.64"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="14sp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="313dp"
        android:layout_height="465dp"
        android:backgroundTint="@color/cardview_light_background"
        android:clickable="true"
        android:contentDescription="@string/detail"
        android:elevation="3dp"
        android:stateListAnimator="@null"
        android:translationZ="3dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.616">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:padding="8dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="16dp"
                    app:cardCornerRadius="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:backgroundTint="@color/md_theme_dark_inversePrimary">

                    <TextView
                        android:id="@+id/tv_first_letter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppinsregular"
                        tools:text="@string/number" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/titleAnalisis"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:fontFamily="@font/poppinsmedium"
                    tools:text="@string/title_hasilanalisis" />
            </LinearLayout>
            <TextView
                style="@style/Animation.Design.BottomSheetDialog"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:paddingTop="2dp"
                android:text="@string/hasilanalisis" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="157dp"
                android:paddingLeft="22dp"
                android:paddingTop="2dp"
                android:paddingRight="22dp"
                android:text="@string/penjelasanalisis" />
            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="9dp"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingLeft="10dp">

                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:background="#D3D3D3"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>